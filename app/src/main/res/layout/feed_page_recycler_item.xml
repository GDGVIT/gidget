<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:id="@+id/feedPageRecyclerViewItemRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/feedPageRecyclerItemColor"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/feedPageRecyclerViewProfilePhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/darkestBlue"
                    android:src="@drawable/ic_baseline_person_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/feedPageRecyclerViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:text="@string/username"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/feedPageRecyclerViewRepoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedPageRecyclerViewUsername"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"
                android:text="@string/repo_name"
                android:textColor="@color/lightGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/feedPageRecyclerViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedPageRecyclerViewRepoName"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:text="@string/date"
                android:textColor="@color/lightGrey"
                android:textStyle="italic" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <ImageButton
                    android:id="@+id/feedPageRecyclerViewOpenRepoButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/feedPageRecyclerItemColor"
                    android:elevation="0dp"
                    android:src="@drawable/ic_baseline_open_in_new_24"
                    tools:targetApi="lollipop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/feedPageRecyclerViewEventPhoto"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/feedPageRecyclerItemColor"
                    android:elevation="0dp"
                    android:src="@mipmap/github_branch_round"
                    tools:targetApi="lollipop" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>